<h2>総合評価</h2>
<p>
{{ message }}{{ common }}
</p>
<img style="margin-left: 40px;" src=./diagnose-chart/{{ uuid }}>
<h2 >分野ごとの得点</h2>
    <table border=1 style="margin-left: 40px;">
    <thead>
    <tr><th>分野</th><th>得点</th><th>平均点</th><th>配点</th><th>偏差値</th></tr>
    </thead> 
    <tbody>
    {% for item, pt in point %}
      <tr><td>{{ item }}</td><td align=right>{{ pt }}</td><td align=right>{{ attribute(average, item) }}</td><td align=right>{{ attribute(full, item) }}</td><td align=right>{{ attribute(deviation, item) }}</td></tr>
    {% endfor %}
    <tr><td>総合</td><td align=right>{{ total }}</td><td align=right>{{ total_average }}</td><td align=right>{{ fullscore }}</td><td align=right>{{ total_deviation }}</td><tr>
    </tbody>
    </table>
  <h2>あなたの強み</h2>
<p>
  {{ pros }}
</p>
